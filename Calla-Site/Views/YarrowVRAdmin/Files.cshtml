@{
    Layout = "_YarrowVRAdminPage";
    ViewData["Title"] = "Files";
}

@model System.Collections.Generic.IEnumerable<Yarrow.Data.Files>


@if (Model == null || Model.Empty())
{
    <p>No Content</p>
}
else
{
    <table id="output" cellspacing="0">
        <thead>
            <tr>
                <th></th>
                <th>Name</th>
                <th>MIME Type</th>
                <th>Size</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td><a href="~/YarrowVRAdmin/File/@row.Id">@row.Id</a></td>
                    <td>@row.Name</td>
                    <td>@row.Mime</td>
                    <td>@Juniper.Units.FileSize.Format((ulong)row.Size)</td>
                    <td>@row.Timestamp</td>
                </tr>
            }
        </tbody>
    </table>
}