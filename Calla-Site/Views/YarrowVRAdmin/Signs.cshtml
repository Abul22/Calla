@{
    Layout = "_YarrowVRAdminPage";
    ViewData["Title"] = "Signs";
}

@model System.Collections.Generic.IEnumerable<Yarrow.Data.Signs>


@if (Model == null || Model.Empty())
{
    <p>No Content</p>
}
else
{
    <table id="output" cellspacing="0">
        <thead>
            <tr>
                <th></th>
                <th>File</th>
                <th>Transform</th>
                <th>Is Callout</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
            <tr>
                <td><a href="~/YarrowVRAdmin/Sign/@row.Id">@row.Id</a></td>
                <td><a href="~/YarrowVRAdmin/File/@row.FileId">@row.FileId</a></td>
                <td><a href="~/YarrowVRAdmin/Transform/@row.TransformId">@row.TransformId</a></td>
                <td>@row.IsCallout</td>
            </tr>
            }
        </tbody>
    </table>
}