{
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "System",
    "target": "es6",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [ "scripts/**/*" ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
